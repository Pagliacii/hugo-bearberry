{
  "title": "{{ .Site.Title }}",
  "description": "{{ .Site.Params.description }}",
  "baseURL": "{{ .Site.BaseURL }}",
  "language": "{{ .Site.Language.Lang }}",
  "lastBuildDate": "{{ now.Format "2006-01-02T15:04:05Z07:00" }}",
  "posts": [
    {{ range first 10 .Site.RegularPages }}
    {
      "title": {{ .Title | jsonify }},
      "url": "{{ .Permalink }}",
      "date": "{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}",
      "summary": {{ .Summary | plainify | truncate 200 | jsonify }}
    }{{ if not (eq . (index (first 10 $.Site.RegularPages) 9)) }},{{ end }}
    {{ end }}
  ]
}